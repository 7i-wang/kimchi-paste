<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <!-- 唯一标识符，通常使用应用的反向域名 -->
        <key>Label</key>
        <string>com.ench.KimchiPaste</string>

        <!-- 应用程序可执行文件的路径 -->
        <key>ProgramArguments</key>
        <array>
            <string>/Applications/KimchiPaste.app/Contents/MacOS/KimchiPaste</string>
            <!-- 可选参数 -->
            <string>--launchagent</string>
        </array>

        <!-- 登录时自动启动 -->
        <key>RunAtLoad</key>
        <true/>

        <!-- 保持应用程序运行，如果崩溃则自动重启 -->
        <key>KeepAlive</key>
        <true/>

        <!-- 标准输出和错误输出路径，用于调试 -->
        <key>StandardOutPath</key>
        <string>/tmp/KimchiPaste.stdout</string>
        <key>StandardErrorPath</key>
        <string>/tmp/KimchiPaste.stderr</string>

        <!-- 可选：设置工作目录 -->
        <key>WorkingDirectory</key>
        <string>/Users/Shared/KimchiPaste</string>

        <!-- 可选：延迟启动时间（秒） -->
        <key>StartInterval</key>
        <integer>5</integer>

        <!-- 可选：指定环境变量 -->
        <key>EnvironmentVariables</key>
        <dict>
            <key>PATH</key>
            <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
        </dict>
    </dict>
</plist>
